<h1>Paiement pour l'événement : <%= @event.title %></h1>
<p>Prix : <%= @event.price %> €</p>

<%= form_with url: event_payments_path(@event), local: true do |form| %>
  <article>
    <label>Numéro de carte</label>
    <div id="card-element"></div>
    <div id="card-errors" role="alert"></div>
  </article>

  <%= form.hidden_field :stripeToken %>
  <%= form.submit "Payer" %>
<% end %>